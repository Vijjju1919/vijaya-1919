cat > Jenkinsfile <<'EOF'
pipeline {
  agent any

  stages {
    stage('Checkout') {
      steps {
        git branch: 'main', url: 'https://github.com/Vijjju1919/vijaya-1919.git'
      }
    }
    stage('Build Docker Image') {
      steps {
        sh 'docker build -t zomato-app:latest .'
      }
    }
    stage('Stop Old Container') {
      steps {
        sh 'docker rm -f zomato-container || true'
      }
    }
    stage('Run New Container') {
      steps {
        sh 'docker run -d -p 5000:5000 --name zomato-container zomato-app:latest'
      }
    }
  }
}
EOF

